<!-- my editing page for work post  -->
<div style="max-width: 600px; margin: 40px auto; padding: 20px; background-color: #fff; border-radius: 8px; box-shadow: 0 4px 8px rgba(0,0,0,0.1);">
  <h1 style="text-align: center; margin-bottom: 20px; color: #333;">Edit Your Work Post</h1>

  <%= form_with(model: @work_post, local: true) do |f| %>
    <!-- Title field -->
    <div style="margin-bottom: 15px;">
      <%= f.label :title %><br>
      <%= f.text_field :title, style: "width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" %>
    </div>

    <!-- Description field -->
    <div style="margin-bottom: 15px;">
      <%= f.label :description %><br>
      <%= f.text_area :description, rows: 5, style: "width: 100%; padding: 10px; border: 1px solid #ccc; border-radius: 5px;" %>
    </div>

    <!-- Optional: replace existing image -->
    <div style="margin-bottom: 15px;">
      <%= f.label :image %><br>
      <%= f.file_field :image %>
      <% if @work_post.image.attached? %>
        <p>Current image:</p>
        <%= image_tag @work_post.image, style: "max-width: 100%; height: auto; border-radius: 5px;" %>
      <% end %>
    </div>

    <!-- Submit button -->
    <div style="text-align: center;">
      <%= f.submit "Update Post", style: "padding: 10px 20px; background-color: #d9752b; color: white; border: none; border-radius: 5px; font-size: 16px; cursor: pointer;" %>
    </div>
  <% end %>
</div>