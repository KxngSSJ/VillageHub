<!-- Work posts upload page -->
<div style="text-align: center; margin-top: 50px;">
  <h1>Upload Your Work</h1>

  <%= form_with model: @work_post, local: true, html: { multipart: true, style: "display: inline-block; text-align: left;" } do |f| %>
    
    <div style="margin-bottom: 15px;">
      <%= f.label :title %><br>
      <%= f.text_field :title, style: "width: 300px; padding: 8px;" %>
    </div>

    <div style="margin-bottom: 15px;">
      <%= f.label :description %><br>
      <%= f.text_area :description, style: "width: 300px; padding: 8px;" %>
    </div>

    <div style="margin-bottom: 15px;">
      <%= f.label :image %><br>
      <%= f.file_field :image %>
    </div>

    <div>
      <%= f.submit "Upload Work", style: "padding: 10px 20px; font-size: 16px;" %>
    </div>

  <% end %>
</div>
