<div style="background: #f5f5f5; padding-bottom: 50px;">
  <!-- Banner Section -->
  <div style="background-color: #d9752b; color: white; padding: 80px 30px; text-align: center;">
    <% if current_user %>
      <h1 style="font-size: 48px; font-weight: bold;">Welcome, <%= current_user.username %> ðŸ‘‹</h1>
      <p style="font-size: 20px; margin-top: 10px;">Browse trusted local tradesmen and their work</p>
    <% else %>
      <h1 style="font-size: 48px; font-weight: bold;">Welcome to VillageHub</h1>
      <p style="font-size: 20px; margin-top: 10px;">Connecting you to trusted local tradesmen</p>
      <div style="margin-top: 30px;">
        <%= link_to "Sign Up", signup_path, class: "btn btn-success", style: "margin-right: 10px; padding: 10px 20px; font-size: 16px;" %>
        <%= link_to "Login", login_path, class: "btn btn-primary", style: "padding: 10px 20px; font-size: 16px;" %>
      </div>
    <% end %>
  </div>

  <!-- Founding Tradesmen Section -->
<div style="padding: 40px; background-color: #f2f2f2;">
  <!-- Section heading -->
  <h1 style="text-align: center; color: #333; font-size: 36px; margin-bottom: 30px;">
    Meet Our Founding Tradesmen
  </h1>

  <!-- Flex container for the 4 cards -->
  <div style="display: flex; flex-wrap: wrap; gap: 20px; justify-content: center;">

    <% # We define 4 founding tradesmen manually using a Ruby array of hashes %>
    <% tradesmen = [
      { name: "Prince the Plumber", profession: "Plumber", experience: "15 years", rating: 5 },
      { name: "Latto the Electrician", profession: "Electrician", experience: "12 years", rating: 4 },
      { name: "Davido the Carpenter", profession: "Carpenter", experience: "10 years", rating: 4 },
      { name: "Lebron the Painter", profession: "Painter", experience: "11 years", rating: 5 }
    ] %>

    <% # Loop through each tradesman and create a card %>
    <% tradesmen.each do |tradesman| %>
    <div style="background: white; border-radius: 8px; box-shadow: 0 4px 8px rgba(0,0,0,0.1); width: 280px; padding: 20px;">

    <!-- Displays the tradesman's name -->
     <h3 style="color: #d9752b;"><%= tradesman[:name] %></h3>

    <!-- Shows their profession and experience -->
    <p><strong>Profession:</strong> <%= tradesman[:profession] %></p>
     <p><strong>Experience:</strong> <%= tradesman[:experience] %></p>

     <!-- Display the star rating using gold stars and light gray for the empty ones -->
     <p><strong>Rating:</strong>
      <% tradesman[:rating].times do %>
       <span style="color: gold;">â˜…</span>
      <% end %>
       <% (5 - tradesman[:rating]).times do %>
      <span style="color: lightgray;">â˜…</span>
      <% end %>
      </p>

        <!--  message button but doesnt work  (can be changed to email or social link later) -->
      <a href="#" style="display: inline-block; margin-top: 10px; padding: 10px 15px; background-color: #d9752b; color: white; border-radius: 5px; text-decoration: none;">Message</a>
      </div>
    <% end %>
  </div>
</div>


