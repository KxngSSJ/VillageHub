<div style="text-align: center; margin-top: 50px;">
  <h1>Login</h1>

  <%= form_with url: login_path, method: :post, html: { style: "display: inline-block; text-align: left;" } do |f| %>
    
    <!-- Username Field -->
    <div style="margin-bottom: 15px;">
      <%= label_tag :username, "Username" %><br>
      <%= text_field_tag :username, nil, style: "width: 300px; padding: 8px;" %>
    </div>

    <!-- Password Field -->
    <div style="margin-bottom: 15px;">
      <%= label_tag :password, "Password" %><br>
      <%= password_field_tag :password, nil, style: "width: 300px; padding: 8px;" %>
    </div>

    <!-- Login Button -->
    <div style="margin-bottom: 20px;">
      <%= submit_tag "Login", style: "padding: 10px 20px; font-size: 16px; cursor: pointer;" %>
    </div>
  <% end %>

  <!-- Link to Forgot Password page -->
  <div style="margin-top: 10px;">
    <!-- This link takes the user to the password recovery form -->
    <%= link_to "Forgot your password?", password_forgot_path, style: "color: #d9752b; text-decoration: underline; display: block; margin-bottom: 15px;" %>
  </div>

  <!-- Link back to Signup page -->
  <div style="margin-top: 10px;">
    <%= link_to "Don't have an account? Sign up here", signup_path, style: "display: inline-block; padding: 10px 20px; background-color: #2ecc71; color: white; text-decoration: none; border-radius: 5px; font-size: 16px; margin-top: 10px;" %>
  </div>
</div>